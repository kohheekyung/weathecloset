<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_07_17">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/scdream6"
        android:text="오늘 입은 옷들을 클릭해주세요"
        android:textColor="#ffffff"
        android:textSize="50sp" />
    <!--<ListView-->
        <!--android:id="@+id/listview2"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="500dp"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OUTER"
        android:id="@+id/textView1"
        android:fontFamily="@font/scdream4"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_tab2_outer"
        android:layout_width="match_parent"
        android:layout_height="90dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP"
        android:id="@+id/textView2"
        android:fontFamily="@font/scdream4"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_tab2_top"
        android:layout_width="match_parent"
        android:layout_height="90dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOTTOM"
        android:id="@+id/textView3"
        android:fontFamily="@font/scdream4"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_tab2_bottom"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETC ITEM"
        android:id="@+id/textView4"
        android:fontFamily="@font/scdream4"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_tab2_etc"
        android:layout_width="match_parent"
        android:layout_height="90dp" />
</LinearLayout>